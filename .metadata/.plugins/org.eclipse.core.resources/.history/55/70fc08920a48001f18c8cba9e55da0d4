package hanghae99_study.day1;

public class 자연수뒤집기 {
	
	class Solution {
	    public int[] solution(long n) {
	        String word = Long.toString(n);
	        int[] answer = new int[word.length()];

	        int index = word.length() - 1;
	        int a = 0;
	        
	        for (int i = index; i >= 0; i--) {
	            answer[a] = word.charAt(i) - '0';
	            a++;
	        }
	        
	        return answer;
	    }
	}
}
